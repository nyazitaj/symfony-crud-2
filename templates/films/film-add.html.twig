{% extends 'base.html.twig' %}

{% block title %}Hello FilmsController!{% endblock %}

{% block body %}
<style>
</style>

<div class="film-add">
    <div class="film-add-container">

        {% if (idEditor) %}
            <div class="film-add-title"><h2>Modification d'un film</h2></div>
        {% else %}
            <div class="film-add-title"><h2>Nouveau film</h2></div>
        {% endif %}

        {{ form_start(form) }}

        {{ form_row(form.title, { 'label': 'Titre du film :', }) }}
        {{ form_row(form.realisateur, { 'label': 'Réalisateur :', }) }}
        {{ form_row(form.genre, { 'label': 'Genre :', }) }}
        {{ form_row(form.image, { 'label': 'Le lien d\'affiche :', }) }}
        {{ form_row(form.link, { 'label': 'Le lien du film :', 'type': 'url' }) }}
        {{ form_row(form.description, { 'label': 'Résumé :', 'rows': '10' }) }}
        {{ form_row(form.duree, { 'label': 'Durée (en minutes) :', 'type': 'number' }) }}
        {{ form_row(form.status, { 'label': 'Statut :', }) }}

        {% if (idEditor) %}
            {{ form_row(form.save, { 'label': 'Enregistrer' }) }}
        {% else %}
            {{ form_row(form.save, { 'label': 'Ajouter' }) }}
        {% endif %}

    </div>
</div>

    {{ form_end(form) }}
{% endblock %}
