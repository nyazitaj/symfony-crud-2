{% extends 'base.html.twig' %}

{% block title %}Hello FilmsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    <label for="film-titre">Titre du film</label>
    <input type="text" id="film-titre" Placeholder="Saisir le titre du film" />
    <h1>Saved new films with title  <u>{{ film_title }}</u></h1>
</div>

<div>
    <label for="film-realisateur">Nom du réalisateur</label>
    <input type="text" id="film-realisateur" Placeholder="Saisir le nom du réalisateur" />
    <h1>Saved new films with title  <u>{{ film_title }}</u></h1>
</div>

<div>
    <label for="film-genre">Genre</label>
    <input type="text" id="film-genre" Placeholder="Le genre" />
    <h1>Saved new films with title  <u>{{ film_title }}</u></h1>
</div>
{% endblock %}
