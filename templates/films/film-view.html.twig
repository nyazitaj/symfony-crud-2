{% extends 'base.html.twig' %}

{% block title %}Hello FilmsController!{% endblock %}

{% block body %}
<style>
</style>

<div class="film">
    <div class="film-container">
        <div class="row-film-image">
            <img src="{{ film.image }}" alt="{{ film.title }}" />
        </div>

        <div class="row-film-info">
            <div class="film-title">
                <h2>
                    {{ film.title }}
                </h2>
            </div>
            <div class="film-description">
                <p>
                    {{ film.description }}
                </p>
            </div>
            <div class="film-realisateur">
                <p>
                    Réalisateur : {{ film.realisateur }}
                </p>
            </div>
            <div class="film-genre">
                <p>
                    Genre : {{ film.genre }}
                </p>
            </div>
            {# <div class="film-date">
                <p>
                    Date de sortie : {{ film.createdAt }}
                </p>
            </div> #}
            <div class="film-date">
                <p>
                    Durée : {{ film.duree }} minutes
                </p>
            </div>
            <div class="film-date">
                <p>
                    Statut : {{ film.status }}
                </p>
            </div>

            <div class="seance-salle">
                {# {% if (seance.dateDebut) %} #}
                    <div class="film-seance">
                        <p>
                            Séance : {{ seance.dateDebut }}
                        </p>
                    </div>
                {# {% endif %} #}

                {# <div class="film-salle">
                    <p>
                        Salle : {{ salle.num_salle }}
                    </p>
                </div> #}
            </div>

            <div class="film-buttons">
                <a href="{{ path('film_update', { 'id': film.id }) }}" title="Editer" >Editer</a>
                <a href="{{ path('film_delete', { 'id': film.id }) }}" title="Supprimer" >Supprimer</a>
                <a href="{{ film.link }}" title="{{ film.title }}" >Télécharger</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
