{% extends 'base.html.twig' %}

{% block title %}Hello FilmsController!{% endblock %}

{% block body %}
<style>
</style>

<div class="films">
    {% for film in films %}
        <div class="film-container">
            <div class="film-icons">
                <a href="{{ path('film_update', { 'id': film.id }) }}" title="Editer" >
                    <span class="film-edit"><i class="fa-solid fa-pencil"></i></span>
                </a>
                <a href="{{ path('film_delete', { 'id': film.id }) }}" title="Supprimer" >
                    <span class="film-delete"><i class="fa-solid fa-trash-can"></i></span>
                </a>
            </div>

            <a href="{{ path('film_view', { 'id': film.id }) }}" title="{{ film.title }}">

                <div class="row-film-image">
                    <img src="{{ film.image }}" alt="{{ film.title }}" />
                </div>

                <div class="row-film-info">
                    <div class="film-title">
                        {{ film.title }}
                    </div>
                    <div class="film-genre">
                        {{ film.genre }}
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}
</div>
{% endblock %}
