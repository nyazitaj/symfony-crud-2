{% extends 'base.html.twig' %}

{% block title %}Séance{% endblock %}

{% block body %}

<div class="image-fond-seance">

    <div class="seance-and-salle-list">
        <div class="seance-and-salle-list-container">

            <h2>Séance</h2>

            <table class="table">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ seance.id }}</td>
                    </tr>
                    <tr>
                        <th>Date début</th>
                        <td>{{ seance.dateDebut ? seance.dateDebut|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Langue</th>
                        <td>{{ seance.lang }}</td>
                    </tr>
                    <tr>
                        <th>Durée</th>
                        <td>{{ seance.duree }}</td>
                    </tr>
                    <tr>
                        <th>Statut</th>
                        <td>{{ seance.status }}</td>
                    </tr>
                    <tr>
                        <th>Créée le</th>
                        <td>{{ seance.createdAt ? seance.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Modifiée le</th>
                        <td>{{ seance.updatedAt ? seance.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('seance_index') }}">Revenir à la liste</a>

            <a href="{{ path('seance_edit', {'id': seance.id}) }}">Modifier</a>

            {{ include('seance/_delete_form.html.twig') }}

        </div>
    </div>
</div>

{% endblock %}
