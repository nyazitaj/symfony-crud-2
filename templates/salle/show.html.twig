{% extends 'base.html.twig' %}

{% block title %}Salles{% endblock %}

{% block body %}

<div class="image-fond-seance">

    <div class="seance-and-salle-list">
        <div class="seance-and-salle-list-container">

            <h2>Salles</h2>

            <table class="table">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ salle.id }}</td>
                    </tr>
                    <tr>
                        <th>Numéro de salle</th>
                        <td>{{ salle.numSalle }}</td>
                    </tr>
                </tbody>
            </table>

            <a href="{{ path('salle_index') }}">Revenir à la liste</a>

            <a href="{{ path('salle_edit', {'id': salle.id}) }}">Modifier</a>

            {{ include('salle/_delete_form.html.twig') }}

        </div>
    </div>
</div>
